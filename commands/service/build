#!/bin/bash

help() {
  echo "Pipeline Build Stage"
  echo ""
  echo "Usage:"
  echo "  zmicro pipeline service build [options...]"
}

core() {
  if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
    help
    exit 0
  fi

  pipeline::service_prepare "$@"

  pipeline::service_build "$@"
}

run() {
  core "$@"
}

run "$@"
